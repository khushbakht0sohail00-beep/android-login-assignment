<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/cc">
<LinearLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="24dp" android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="140dp">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/reset_password" android:textSize="33dp" android:textStyle="bold" android:textColor="#6F4E37" android:shadowColor="#FFF8DC"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"

        android:paddingBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_registered_email_to_reset_password"
        android:textSize="16sp"
        android:textColor="#6F4E37"

        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:autofillHints=""
        android:hint="@string/emails"
        android:textSize="15sp"
        android:textColor="#6F4E37"
        android:background="#55FFFFFF"
        android:inputType="textEmailAddress" />
    <Button
        android:id="@+id/btnFindAccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Reset Password"
        android:textSize="15sp"
        tools:ignore="HardcodedText,DuplicateSpeakableTextCheck,VisualLintButtonSize" />
</LinearLayout>
</ScrollView>